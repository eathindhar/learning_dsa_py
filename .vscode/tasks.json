{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python CMD",
            "type": "shell",
            "command": "python \"${relativeFile}\" < input.txt > output.txt 2> error.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "problemMatcher": []
        }
    ]
}